<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>spring-boot-starter-parent</artifactId>
        <groupId>org.springframework.boot</groupId>
        <version>1.5.1.RELEASE</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.albedo.java</groupId>
    <artifactId>albedo-boot</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>albedo-boot</name>
    <!-- 项目属性 -->
    <properties>
        <project.release.version>1.0.0-SNAPSHOT</project.release.version>
        <hibernate.version>4.3.11.Final</hibernate.version>
        <assertj-core.version>3.5.2</assertj-core.version>
        <lombok.version>1.16.6</lombok.version>
        <!-- 依赖库的版本定义 -->
        <!-- Plugin -->
        <jdk.version>1.8</jdk.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

    </properties>

    <build>
        <plugins>
            <!-- Compiler 插件, 设定JDK版本 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>${jdk.version}</source>
                    <target>${jdk.version}</target>
                    <showWarnings>true</showWarnings>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <modules>
        <module>albedo-boot-common</module>
        <module>albedo-boot-data</module>
        <module>albedo-boot-api</module>
        <module>albedo-grpc</module>
        <!--<module>albedo-rpc</module>-->
        <module>albedo-boot-web</module>
        <!--<module>albedo-thrift</module>-->
    </modules>

    <distributionManagement>
        <repository>
            <id>Releases</id>
            <name>Project RELEASE</name>
            <url>http://121.43.39.46:8081/nexus/content/repositories/releases</url>
        </repository>
        <snapshotRepository>
            <id>Snapshots</id>
            <name>Porject SNAPSHOTS</name>
            <url>http://121.43.39.46:8081/nexus/content/repositories/snapshots</url>
        </snapshotRepository>
    </distributionManagement>

</project>