    <!-- zookeeper   -->
    <bean id="thriftZookeeper" class="com.albedo.java.thrift.rpc.common.zookeeper.ZookeeperFactory"
          destroy-method="close">
        <property name="zkHosts" value="localhost:2181,localhost:2182,localhost:2183" />
        <property name="namespace" value="com.yangyang.thrift.rpc.demo" />
        <property name="connectionTimeout" value="3000" />
        <property name="sessionTimeout" value="3000" />
        <property name="singleton" value="true" />
    </bean>
    <bean id="echoSerivce" class="com.albedo.java.thrift.rpc.common.ThriftServiceClientProxyFactory" destroy-method="close">
        <property name="maxActive" value="5" />
        <property name="idleTime" value="1800000" />
        <property name="serverAddressProvider">
            <bean class="com.albedo.java.thrift.rpc.common.zookeeper.ThriftServerAddressProviderZookeeper">
                <property name="service" value="com.yangyang.thrift.rpc.com.albedo.java.thrift.com.albedo.java.thrift.rpc.server.demo.EchoSerivce" />
                <property name="version" value="1.0.0" />
                <property name="zkClient" ref="thriftZookeeper" />
            </bean>
        </property>
    </bean>
</beans>